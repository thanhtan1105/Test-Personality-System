<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>project.servlet.AppContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ProcessServlet</servlet-name>
        <servlet-class>project.servlet.ProcessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>project.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>project.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>LoginAPIServlet</display-name>
        <servlet-name>LoginAPIServlet</servlet-name>
        <servlet-class>project.servlet.LoginAPIServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionAPIServlet</servlet-name>
        <servlet-class>project.api.QuestionAPIServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionServlet</servlet-name>
        <servlet-class>project.servlet.QuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyPersonality</servlet-name>
        <servlet-class>project.servlet.MyPersonality</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionFeedServlet</servlet-name>
        <servlet-class>project.servlet.QuestionFeedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAdaptor</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>project.api.ApplicationConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>CreateNewAccountServlet</servlet-name>
        <servlet-class>project.servlet.CreateNewAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>XMLValidation</servlet-name>
        <servlet-class>project.utils.XMLValidation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostQuestionServlet</servlet-name>
        <servlet-class>project.servlet.PostQuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnswerQuestionServlet</servlet-name>
        <servlet-class>project.servlet.AnswerQuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostAnswerServlet</servlet-name>
        <servlet-class>project.servlet.PostAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcessServlet</servlet-name>
        <url-pattern>/ProcessServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAPIServlet</servlet-name>
        <url-pattern>/LoginAPIServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionAPIServlet</servlet-name>
        <url-pattern>/QuestionAPIServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/QuestionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyPersonality</servlet-name>
        <url-pattern>/MyPersonality</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionFeedServlet</servlet-name>
        <url-pattern>/QuestionFeedServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAdaptor</servlet-name>
        <url-pattern>/webresources/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateNewAccountServlet</servlet-name>
        <url-pattern>/CreateNewAccountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>XMLValidation</servlet-name>
        <url-pattern>/XMLValidation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostQuestionServlet</servlet-name>
        <url-pattern>/PostQuestionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnswerQuestionServlet</servlet-name>
        <url-pattern>/AnswerQuestionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostAnswerServlet</servlet-name>
        <url-pattern>/PostAnswerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ProcessServlet</welcome-file>
    </welcome-file-list>
</web-app>
